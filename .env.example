# Notion API Configuration
# Token can start with either 'ntn_' (newer) or 'secret_' (older format)
NOTION_TOKEN=ntn_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Directory Paths (use absolute paths)
EXPORT_DIR=/absolute/path/to/notion-analytics/data/export
OUTPUT_DIR=/absolute/path/to/notion-analytics/data/output
CACHE_DIR=/absolute/path/to/notion-analytics/data/cache

# Analysis Parameters (optional - defaults in config.py)
# STALE_THRESHOLD_DAYS=365
# VERY_STALE_THRESHOLD_DAYS=730
# POWER_USER_THRESHOLD=100
# ACTIVE_USER_THRESHOLD=20
# OCCASIONAL_USER_THRESHOLD=5

# Cost Parameters (optional - defaults in config.py)
# MONTHLY_COST_PER_USER=12
# BLENDED_HOURLY_RATE=48

# Optional: Slack Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
